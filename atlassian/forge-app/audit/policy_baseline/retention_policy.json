{
  "description": "Data retention policy baseline",
  "effective_date": "2024-01-01T00:00:00Z",
  "source": "src/retention/retention_policy.ts DEFAULT_RETENTION_POLICY",
  "policy_version": "1.0",
  "ttl_days": {
    "raw_shard_ttl_days": 90,
    "daily_aggregate_ttl_days": 90,
    "weekly_aggregate_ttl_days": 90
  },
  "cleanup_configuration": {
    "cleanup_schedule": "0 2 * * *",
    "cleanup_timezone": "UTC",
    "description": "Daily cleanup at 2 AM UTC"
  },
  "scope": {
    "delete_raw_shards": true,
    "delete_daily_aggregates": true,
    "delete_weekly_aggregates": true,
    "preserve_metadata": true
  },
  "uninstall_behavior": {
    "uninstall_behavior": "retain_for_days",
    "uninstall_retain_days": 90
  },
  "audit_mode": false,
  "require_approval": false,
  "protected_namespaces": [
    "config/*",
    "index/*"
  ],
  "deletion_strategy": "FIFO",
  "drift_detection": "Policy version must match to prevent silent TTL changes"
}
